{
  "name": "GitHub Issues",
  "version": "0.3.2",
  "manifest_version": 2,
  "description": "Browser extension that adds handy tweaks for issues at GitHub.",
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.github.com/*/issues/*",
        "*://*.github.com/*/pull/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    },
    {
      "matches": [
        "*://*.github.com/settings/*"
      ],
      "js": ["settings.js"]
    }
  ],
  "options_page": "options.html",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    "options.html"
  ]
}
